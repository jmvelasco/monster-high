{
  "name": "monster-high",
  "version": "1.0.0",
  "description": "Monster High Wiki Scraper with AI processing - Monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "dev": "npm run dev --workspace=apps/backend",
    "build": "npm run build --workspaces",
    "compile": "npm run compile --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "clean": "npm run clean --workspaces",
    "validate": "npm run compile && npm run lint && npm run test",
    "upgrade": "ncu -i",
    "upgrade:all": "ncu -u"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "husky": "9.1.7",
    "npm-check-updates": "^19.2.0",
    "typescript": "5.9.3"
  }
}